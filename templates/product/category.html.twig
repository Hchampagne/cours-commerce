{% extends "base.html.twig" %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href=" {{ path('homepage')}}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="#">
				{{ category.name}}
			</a>
		</li>

	</ol>

	<h1>category:
		{{  category.name }}</h1>
	<div class="row">
		{% for p in category.products %}
			<div class="col-3">
				<div class="card">
					<img class="img-fluid" src={{p.mainPicture}} alt="image produit">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							(Prix:
							{{ p.price / 100 }})</h4>
						<span class="badge bg-primary">
							{{ p.category.name }}
						</span>
						<p class="card-ext">
							{{p.shortDescription}}</p>
						<a href=" {{ path('product_show', {'category_slug': p.category.slug, 'slug': p.slug} ) }} " class="btn btn-primary btn-sm">DÃ©tails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>

			</div>
		{% endfor %}
	</div>
{% endblock %}
